{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",  
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@repo/utils/*": ["packages/utils/src/*"],
      "@repo/patterns/*": ["packages/patterns/src/*"],
      "@repo/ui/*": ["packages/ui/src/*"]
    }
  },
  "include": ["packages/*/src"]
}
